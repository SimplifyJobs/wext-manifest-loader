{
	"name": "wext-manifest-loader",
	"version": "1.0.0",
	"description": "Webextension Manifest Generator that you specify `manifest.json` properties to appear only in specific browsers.",
	"license": "MIT",
	"author": "abhijithvijayan",
	"repository": "https://github.com/abhijithvijayan/wext-manifest-loader.git",
	"engines": {
		"node": ">=10.0.0"
	},
	"scripts": {
		"dev": "tsc --watch",
		"build": "tsc",
		"release": "yarn build && npm publish",
		"pack:list": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"main": "lib/loader.js",
	"types": "lib/index.d.ts",
	"files": [
		"/lib"
	],
	"keywords": [
		"webextension",
		"manifest",
		"webpack",
		"loader",
		"wext",
		"chrome",
		"firefox",
		"edge",
		"opera"
	],
	"devDependencies": {
		"@types/loader-utils": "^1.1.3",
		"@types/node": "^13.9.8",
		"@typescript-eslint/eslint-plugin": "^2.25.0",
		"@typescript-eslint/parser": "^2.25.0",
		"babel-eslint": "^10.0.3",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-onepass": "2.2.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-html": "^6.0.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^3.0.0",
		"prettier": "^2.0.2",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"loader-utils": "^2.0.0",
		"schema-utils": "^2.6.5"
	}
}
